<!DOCTYPE HTML>
<html>
    <head>
        <meta http-equiv="Content-Type" content="text/html;charset=utf-8">
        <title> PyRT Options </title>
        <link rel="stylesheet" href="/css/options.css" type="text/css">
        <script src="/javascript/jquery-1.7.min.js" type="text/javascript"></script>
        <script src="/javascript/jquery-ui-1.8.17.custom.min.js" type="text/javascript"></script>
        <script src="/javascript/options.js" type="text/javascript"></script>
    </head>
    <body>
        <div id="header">
            <div id="topbar">
                <div class="topbar-tab" title="Main" id="tab_main">Main</div>
                <div id="tools-bar">
                    <div class="topbar-tab_options selected"  title="Options" id="tab_options">Options</div>
                </div>
            </div>
        </div>
        <div id="main_body">
            <div id="wrapper">
                <div id="main_contents">
                    <div id="sidebar">
                        <ol class="sidebar-list">
                            <li id="pyrt-tab" class="selected">PyRT</li>
                            ##password
                            ##animations
                            ##refresh rate
                            ##port
                            <li id="throttle-tab">Throttle</li>
                            ##global
                            <li id="network-tab">Network</li>
                            ##port range
                            ##dl dir
                            ##move on complete
                            <!--<li id="priority-tab">Priority</li>-->
                            ##on_ratio - set priorities
                            ##trackers - set priorities
                            <li id="trackers-tab">Trackers</li>
                            ##show cached favicons
                            ##allow changing
                        </ol>
                    </div>
                    <div class="options-wrapper selected">
                        <div id="pyrt" class="options">
                            <div id="pyrt-password" class="options-box">
                                <h3>Change your password</h3>
                                <div>
                                    <label id="foroldpass" for="oldpass">Current password:</label>
                                    <input type="password" id="oldpass">
                                </div>
                                <div>
                                    <label id="fornewpass" for="newpass">New password:</label>
                                    <input type="password" id="newpass">
                                    <label id="fornewpassconf" for="newpassconf">Confirm:</label>
                                    <input type="password" id="newpassconf">
                                </div>
                            </div>
                            <div id="pyrt-refresh" class="options-box">
                                <h3>Refresh rate</h3>
                                <input type="text" id="refreshrate" placeholder="$config.refresh">
                                    <span id="forrefreshrate" class="after-text">seconds</span>
                            </div>
                            <div id="pyrt-port" class="options-box error">
                                <h3>PyRT Port</h3>
                                <label for="pyrtport" id="forpyrtport">$config.host : </label>
                                <input type="text" id="pyrtport" placeholder="$config.port">
                            </div>
                            <div id="pyrt-submit" class="submit-box">
                                Submit Changes
                            </div>
                        </div>
                    </div>
                    <div class="options-wrapper">
                        <div id="throttle" class="options">
                            <div id="throttle-global" class="options-box">
                                <h3>Global Throttle</h3>
                                <div>
                                    <label for="throttle-up" id="forthrottle-up">Up:</label>
                                    <input type="text" id="throttle-up" placeholder="$throttleup">
                                    <span id="forthrottle-up-text" class="after-text">KB/s</span>
                                    <label for="throttle-down" id="forthrottle-down">Down:</label>
                                    <input type="text" id="throttle-down" placeholder="$throttledown">
                                    <span id="forthrottle-down-text" class="after-text">KB/s</span>
                                </div>
                            </div>
                            <div id="throttle-submit" class="submit-box">
                                Submit Changes
                            </div>
                        </div>
                    </div>
                    <div class="options-wrapper">
                        <div id="network" class="options">
                            <div id="network-portrange" class="options-box">
                                <h3>Port range</h3>
                                <div>
                                    <input type="text" id="network-portfrom" class="network-port" placeholder="$networkportfrom">
                                    <span>-</span>
                                    <input type="text" id="network-portto" class="network-port" placeholder="$networkportto">
                                </div>
                            </div>
                            <div id="network-dldir" class="options-box">
                                <h3>Download directory</h3>
                                <div>
                                    <input type="text" id="network-dir" placeholder="$networkdir">
                                </div>
                            </div>
                            <div id="network-move" class="options-box">
                                <h3>Move on complete</h3>
                                <div>
                                    <label for="network-movecheck" id="fornetwork-movecheck">Enable</label>
                                    <input type="checkbox" id="network-movecheck">
                                    <label for="network-moveto" id="fornetwork-moveto" class="network-moveto hidden">
                                    <input type="text" id="network-moveto" class="network-moveto hidden">
                                </div>
                            </div>
                            <div id="network-submit" class="submit-box">
                                Submit Changes
                            </div>
                        </div>
                    </div>
                    <div class="options-wrapper">
                        <div id="priority" class="options">
                            <div id="priority-settings" class="options-box">
                                <h3>Priority Settings Placeholder</h3>
                                <div>Testing</div>
                            </div>
                            <div id="priority-submit" class="submit-box">
                                Submit Changes
                            </div>
                        </div>
                    </div>
                    <div class="options-wrapper">
                        <div id="trackers" class="options">
                            <div id="trackers-settings" class="options-box">
                                <h3>Tracker icons</h3>
                                <div>
                                    #for $tracker, $trackericon in $trackericons.iteritems()
                                    <div id="tracker-$tracker">
                                        <img class="trackericon" src="$trackericon">
                                        <div class="tracker">$tracker</div>
                                    </div>
                                    #end for
                                </div>
                            </div>
                            <div id="trackers-submit" class="submit-box">
                                Submit Changes
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </body>
</html>