<div class="drop_down_container">
    <ol>
        <li>
            <h2 class="drop_down_h2"><span>Details</span></h2>
            <div id="drop_down_main_$torrent_id" class="drop_down_main drop_down_div">
                <div class='column-1'>ID:</div><div class='column-2'>$torrent_id</div>
                <div class='column-1'>Size:</div><div class='column-2'>$size</div>
                <div class='column-1'Percentage:</div><div class='column-2'>$percentage%</div>
                <div class='column-1'>Downloaded:</div><div class='column-2'>$downloaded</div>
                <div class='column-1'>Uploaded:</div><div class='column-2'>$uploaded</div>
                <div class='column-1'>Ratio:</div><div class='column-2'>$ratio</div>
                <div class='column-1'>Peers:</div><div class='column-2'>$peers</div>
                <div class='column-1'>Created:</div><div class='column-2'>$created</div>
                <div class='column-1'>Trackers:</div>
                <div class='column-2'>
                 #for $tracker in $trackers
                   <img alt="$tracker.root_url" title="$tracker.root_url" src="$tracker.favicon_url" width=16 height=16>
                 #end for
                </div>
            </div>
        </li>
        <li>
            <h2 class="drop_down_h2"><span>Peers</span></h2>
            <div id="drop_down_peers_$torrent_id" class="drop_down_peers drop_down_div">
                <table>
                    <thead class="drop_down_peers">
                        <tr>
                            <th>IP Address</th>
                            <th>Port</th>
                            <th>Client</th>
                            <th>Completed</th>
                            <th>Download Rate</th>
                            <th>Download Total</th>
                            <th>Upload Rate</th>
                            <th>Upload Total</th>
                            <th>Peer Rate</th>
                            <th>Peer Total</th>
                        </tr>
                    </thead>
                    <tbody class="drop_down_peers">
                      #for $peer in $peer_details
                        <tr>
                            <td class="peer_address">$peer.address</td>
                            <td class="peer_port">$peer.port</td>
                            <td class="peer_client">$peer.client_version</td>
                            <td class="peer_completed">$peer.completed_percent%</td>
                            <td class="peer_dlrate">$peer.dlrate/s</td>
                            <td class="peer_dltot">$peer.dltot</td>
                            <td class="peer_uprate">$peer.uprate/s</td>
                            <td class="peer_uptot">$peer.uptot</td>
                            <td class="peer_rate">$peer.rate/s</td>
                            <td class="peer_tot">$peer.total</td>
                        </tr>
                      #end for
                    </tbody>
                </table>
            </div>
        </li>
        <li>
            <h2 class="drop_down_h2"><span>Files</span></h2>
            <div id="drop_down_files_$torrent_id" class="drop_down_files drop_down_div">
                $file_tree
            </div>
        </li>
    </ol>
        
    <div class='column-2' style='clear : left;'><span class='fakelink' onClick='removerow("$torrent_id")'>Close</span> <!-- <a style='color : blue;' href='detail?torrent_id=$torrent_id'>Detailed View</a> --> </div>
</div>